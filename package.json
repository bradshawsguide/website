{
  "name": "bradshawsguide",
  "version": "3.0.0-beta",
  "private": true,
  "description": "Bradshaw's Guide for Tourists in Great Britain & Ireland",
  "keywords": [
    "railways",
    "reference",
    "travel"
  ],
  "homepage": "https://bradshaws.guide",
  "license": "MIT",
  "author": {
    "name": "Paul Robert Lloyd",
    "email": "noreply@paulrobertlloyd.com",
    "url": "https://paulrobertlloyd.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paulrobertlloyd/bradshawsguide.git"
  },
  "bugs": "https://github.com/paulrobertlloyd/bradshawsguide/issues",
  "scripts": {
    "prestart": "npm install",
    "start": "gulp start",
    "dev": "gulp dev",
    "test": "xo || stylelint **/*.scss"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "files": "**/*.scss",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "include",
            "mixin"
          ]
        }
      ],
      "declaration-empty-line-before": "never",
      "string-quotes": "double"
    }
  },
  "xo": {
    "space": true,
    "envs": "browser",
    "ignores": [
      "src/plugins/**",
      "www/**"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "browser-sync": "^2.26.3",
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-imagemin": "^5.0.0",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sass-glob": "^1.0.9",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-util": "^3.0.0",
    "rollup": "^0.67.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-uglify": "^6.0.0",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "xo": "^0.23.0"
  },
  "dependencies": {
    "fontfaceobserver": "^2.0.0",
    "leaflet": "^1.3.4",
    "node-sass": "^4.10.0"
  }
}
